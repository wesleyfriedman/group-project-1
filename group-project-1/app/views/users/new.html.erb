<div class="container" style="padding-top:100px; font-family: Quicksand;">
  <h1>Sign Up</h1><br>
  <% if @user.errors.any? %>
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
     <ul><% @user.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %></ul>
  <% end %>

  <%= form_for @user do |f| %>
  <div class="form-group row">
  <label class="col-xs-2 col-form-label">Name:</label>
  <div class="col-xs-10">
    <%= f.text_field :name %>
  </div>
</div>

<div class="form-group row">
  <label class="col-xs-2 col-form-label">Email:</label>
  <div class="col-xs-10">
    <%= f.email_field :email %>  </div>
</div>

<div class="form-group row">
  <label class="col-xs-2 col-form-label">Phone Number:</label>
  <div class="col-xs-10">
    <%= f.telephone_field :phone_number %>
  </div>
</div>
<div class="form-group row">
  <label class="col-xs-2 col-form-label">Password:</label>
  <div class="col-xs-10">
    <%= f.password_field :password %>
  </div>
</div>
<div class="form-group row">
  <label class="col-xs-2 col-form-label"> Password Confirmation:</label>
  <div class="col-xs-10">
    <%= f.password_field :password_confirmation %>
  </div><br><br>
  <div class="col-xs-10">
    <button class="btn btn-secondary" type="<%= f.submit %>"> Sign Up </button>
</div>

  <% end %>
</div>

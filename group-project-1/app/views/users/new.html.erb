<div class="container" style="padding-top:20px; font-family: Quicksand;">
  <h1>Sign Up</h1><br>
  <% if @user.errors.any? %>
    <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
     <ul><% @user.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %></ul>
  <% end %>


<div class="col-xs-4" >
  <div class="form-group">
  <%= form_for @user do |f| %>
    <label class="col-form-label">Name:</label>
    <%= f.text_field :name, class: "form-control" %>

    <label class="col-form-label">Email:</label>
    <%= f.email_field :email, class: "form-control" %>

    <label class="col-form-label">Phone Number:</label>
    <%= f.telephone_field :phone_number, class: "form-control" %>

    <label class="col-form-label">Password:</label>
    <%= f.password_field :password, class: "form-control"  %>

    <label class="col-form-label">Confirmation:</label>
    <%= f.password_field :password_confirmation, class: "form-control"  %><br>

    <%= f.submit "Create User", class: ["btn btn-secondary"] %>
    <% end %>
</div>
</div>
</div>

<div class="container" style="padding-top:10px; font-family: Quicksand;">
  <h1>Update User</h1>
<!-- errors -->
  <% if @user.errors.any? %>
   <div id="error_explanation">
    <h4><%= pluralize(@user.errors.count, "error") %>prohibited this user from being saved:</h4>
    <ul><% @user.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %></ul>
   </div>
  <% end %><br>
<!-- errors -->
<div class="col-xs-4" >
  <div class="form-group">
  <%= form_for @user do |f| %>
    <label class="col-form-label">Name:</label>
    <%= f.text_field :name, class: "form-control" %>

    <label class="col-form-label">Email:</label>
    <%= f.email_field :email, class: "form-control" %>

    <label class="col-form-label">Phone Number:</label>
    <%= f.telephone_field :phone_number, class: "form-control" %>

    <label class="col-form-label">Password:</label>
    <%= f.password_field :password, class: "form-control"  %>

    <label class="col-form-label">Confirmation:</label>
    <%= f.password_field :password_confirmation, class: "form-control"  %><br>

    <%= f.submit "Update User", class: ["btn btn-secondary"] %>
    <% end %>
    <a class="btn btn-secondary" href="<%= user_path(@user) %>" role="button">Cancel</a>
    <%= button_to "Delete", @user, method: :delete, class: ["btn btn-outline-danger btn-sm"]  %>
</div>
</div>
</div>

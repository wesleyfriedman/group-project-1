<nav class="navbar navbar-light" style="background-color: transparent;">
  <form class="form-inline float-xs-right">
    <a class="btn btn-secondary" href="<%= user_path(@user) %>" role="button">Home</a>
    <a class="btn btn-secondary" href="<%= event_path(@event) %>" role="button">Event</a>
    <a class="btn btn-secondary" href="<%= logout_path %>" role="button" >Log Out</a>
  </form>
</nav>

<h1>Create Task</h1>
<% if @task.errors.any? %>
 <div id="error_explanation">
   <h4>
     <%= pluralize(@task.errors.count, "error") %>
     prohibited this task from being saved:
   </h4>
   <ul>
   <% @task.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
   <% end %>
   </ul>
 </div>
<% end %>

<%= form_for [@event, @task] do |f|  %>
Name: <%= f.text_field :name %><br>
Description: <%= f.text_area :description %><br>
Assign to: <select name="user_id">
  <% @users.each do |user| %>
  <option value="<%= user.id %>" >
  <%= user.name %> </option>
  <% end %>
</select><br>
<%= f.submit "Create" %>
<% end %>

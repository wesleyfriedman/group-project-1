<div class="container"style="padding-top:20px; font-family: Quicksand;">
<%= form_tag '/login' do %>
	Email: <%= text_field_tag 'user[email]' %>
	Password: <%= password_field_tag 'user[password]' %> &nbsp;
	<%= submit_tag 'submit' ,class: ["btn btn-secondary btn-sm"]%>
<% end %>

	<% if flash[:notice] %>
		<div class="error"><%= flash[:notice] %></div>
	<% end %>
</div>

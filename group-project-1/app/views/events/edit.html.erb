<!-- nav bar -->
<div style="font-family: Quicksand;">

<div class="container" style="padding-top:50px; font-family: Quicksand;">
  <h1>Update Event</h1><br>

  <!-- errors  -->
  <% if @event.errors.any? %>
     <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
     <ul><% @event.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
     <% end %></ul>
  <% end %>
  <!-- errors -->

  <div class="col-xs-4" >
    <div class="form-group">
    <%= form_for @event do |f| %>
      <label class="col-form-label">Name:</label>
      <%= f.text_field :name, class: "form-control" %>
      <label class="col-form-label">Starts at:</label>
      <%= f.datetime_local_field :start_date, min: Time.zone.today, class: "form-control" %>
      <label class="col-form-label">Ends at:</label>
      <%= f.datetime_local_field :end_date, min: Time.zone.today, class: "form-control" %>
      <label class="col-form-label">Address:</label>
      <%= f.text_field :address, class: "form-control"  %>
      <label class="col-form-label"> Description:</label>
      <%= f.text_area :description, required: true, class: "form-control"  %><br>
      <%= f.submit "Update Event", class: ["btn btn-secondary"] %>
      <% end %>
      <a class="btn btn-secondary" href="<%= user_path(@user) %>" role="button" >Cancel</a>
      <%= button_to "Delete", @event, method: :delete, class: ["btn btn-outline-danger btn-sm"]  %>
</div>
</div>
